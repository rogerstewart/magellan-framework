<Window 
    x:Class="Wizard.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:Wizard.Controls" Title="Wizard Sample"
    Icon="/Properties/Icon.ico"
    WindowStartupLocation="CenterScreen"
    Width="700"
    Height="400"
    FontSize="10pt"
    TextOptions.TextFormattingMode="Display"
    >
    <DockPanel>
        <Border>
            <Grid>
                <Frame Focusable="False" Name="MainFrame" NavigationUIVisibility="Hidden" />
                <Controls:BusyIndicator Focusable="False" x:Name="BusyIndicator" />
            </Grid>
        </Border>
    </DockPanel>
</Window>
